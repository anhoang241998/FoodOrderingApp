<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.IntroductionFragment"
    tools:ignore="ContentDescription">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewIntro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_38sdp"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/tv_intro"
            android:textColor="#333333"
            android:textSize="@dimen/_24sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewExplore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/tv_explore"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@id/textViewIntro"
            app:layout_constraintStart_toStartOf="@id/textViewIntro"
            app:layout_constraintTop_toBottomOf="@id/textViewIntro" />

        <ImageView
            android:id="@+id/imageViewIntro"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="@dimen/_299sdp"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewExplore"
            app:srcCompat="@drawable/art_word" />

        <Button
            android:id="@+id/btn_move_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/login_btn_bg"
            android:text="@string/btn_logIn_Intro"
            android:textSize="@dimen/_12sdp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@id/imageViewIntro"
            app:layout_constraintStart_toStartOf="@id/imageViewIntro"
            app:layout_constraintTop_toBottomOf="@id/imageViewIntro" />

        <TextView
            android:id="@+id/tv_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/tv_signUp_intro"
            android:textAllCaps="false"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/btn_move_login"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="@id/btn_move_login"
            app:layout_constraintTop_toBottomOf="@id/btn_move_login"
            android:layout_marginBottom="@dimen/_20sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>